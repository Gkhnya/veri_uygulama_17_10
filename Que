package Kuyruk;

/**
 *
 * @author gkhnya
 */

public class Que {

    int dizi[];
    int diziboyutu;
    int count;

    public Que(int diziboyutu) {
        this.diziboyutu = diziboyutu;
        this.dizi = new int[diziboyutu];
        this.count = 0;
    }

    public void push(int data) {
        if (count == diziboyutu) {
            System.out.println("kuyruk dolu");
        } else {
            dizi[count] = data;
            count++;
        }
    }

    public int pop() {
        if (count == 0) {
            System.out.println("kuyruk bo≈ü");
            return 0;
        } else {
            int tmp = dizi[0];
            for (int i = 0; i < count - 1; i++) {
                dizi[i] = dizi[i + 1];
            }
            count--;
            return tmp;
        }
    }

    public void yazdir() {
        for (int i = 0; i < count; i++) {
            System.out.print(dizi[i] + "*");
        }
        System.out.println("");
    }

}
